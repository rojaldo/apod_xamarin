<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ApodApp.AboutPage"
             xmlns:vm="clr-namespace:ApodApp;"
             Title="{Binding Title}">
    <ScrollView>
        <StackLayout>
            <DatePicker x:Name="datepicker" DateSelected="DatePicked">
            </DatePicker>
            <Label x:Name="label_title" Text=""
                HorizontalOptions="CenterAndExpand" />
            <Image x:Name="image_main"></Image>
            <Label x:Name="label_description" Text=""
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ScrollView>
</ContentPage>